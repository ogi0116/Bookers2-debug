

<table class="table table-hover table-inverse">

  <!--検索対象モデルがUserの時 -->
  <% if @range == "User" %>
  <h2>Users search for "<%= @word %>"</h2>
    <thead>
      <th>Image</th>
      <th>Name</th>
      <th></th>
    </thead>
    <tbody>
      <% @users.each do |user| %>
        <tr>
          <td>
            <%= link_to(user) do %>
              <%= image_tag user.get_profile_image, size:"100x100" %><br>
            <% end %>
          </td>
          <td><%= user.name %></td>
          <td><%= link_to 'Show', user %></td>

        </tr>
      <% end %>
    </tbody>
  <% else %>
    <!--検索対象モデルがUserではない時(= 検索対象モデルがBookの時) -->
<h2>Books search for "<%= @word %>"</h2>
 <thead>
   <th></th>
   <th>Title</th>
   <th>Opinion</th>
 </thead>
    <tbody>
      <% @books.each do |book| %>
        <tr>
          <td>
            <%= link_to(book.user) do %>
              <%= image_tag book.user.get_profile_image, size:"100x100" %><br>
            <% end %>
          </td>
          <td><%=link_to book.title,book %></td>
          <td><%= book.body %></td>
        </tr>
      <% end %>
    </tbody>
  <% end %>
</table>